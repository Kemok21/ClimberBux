<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="false">

    <TextView
        android:id="@+id/date_text_view"
        style="@style/TextViewInListOnDate"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/name_text_view"
        style="@style/TextViewInListOnDate"
        android:text="@string/name"
        android:paddingVertical="16dp"
        app:layout_constraintLeft_toRightOf="@id/date_text_view"
        app:layout_constraintRight_toLeftOf="@id/payed_text_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/payed_text_view"
        style="@style/TextViewInListOnDate"
        android:text="@string/payed_text"
        android:paddingVertical="16dp"
        app:layout_constraintRight_toLeftOf="@id/value_of_payed_text_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/value_of_payed_text_view"
        style="@style/TextViewInListOnDate"
        android:padding="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>