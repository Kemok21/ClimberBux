<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomeActivity">

    <TextView
        android:id="@+id/for_gran"
        style="@style/TextInActivityIncome"
        android:paddingTop="@dimen/padding_top_text_view_header_income"
        android:paddingBottom="@dimen/padding_bottom_text_view_header_income"
        android:text="@string/for_gran"
        android:textSize="@dimen/text_size_header_activity_income"
        app:layout_constraintLeft_toRightOf="@id/this_month"
        app:layout_constraintRight_toLeftOf="@id/for_me"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/for_me"
        style="@style/TextInActivityIncome"
        android:paddingTop="@dimen/padding_top_text_view_header_income"
        android:paddingBottom="@dimen/padding_bottom_text_view_header_income"
        android:text="@string/for_me"
        android:textSize="@dimen/text_size_header_activity_income"
        app:layout_constraintLeft_toRightOf="@id/for_gran"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/this_month"
        style="@style/TextInActivityIncome"
        android:paddingLeft="@dimen/padding_left_text_view_month"
        android:paddingBottom="@dimen/padding_bottom_text_view_this_month_row"
        android:text="@string/this_month"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/for_gran" />

    <TextView
        android:id="@+id/last_mont"
        style="@style/TextInActivityIncome"
        android:paddingLeft="@dimen/padding_left_text_view_month"
        android:text="@string/last_month"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/this_month" />

    <TextView
        android:id="@+id/current_income_gran"
        style="@style/TextInActivityIncome"
        android:paddingBottom="@dimen/padding_bottom_text_view_this_month_row"
        android:text="@string/non_payment"
        app:layout_constraintLeft_toRightOf="@id/this_month"
        app:layout_constraintRight_toLeftOf="@id/current_income_me"
        app:layout_constraintTop_toBottomOf="@id/for_gran" />

    <TextView
        android:id="@+id/current_income_me"
        style="@style/TextInActivityIncome"
        android:paddingBottom="@dimen/padding_bottom_text_view_this_month_row"
        android:text="@string/non_payment"
        app:layout_constraintLeft_toRightOf="@id/current_income_gran"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/for_me" />

    <TextView
        android:id="@+id/last_income_gran"
        style="@style/TextInActivityIncome"
        android:text="@string/non_payment"
        app:layout_constraintLeft_toRightOf="@id/last_mont"
        app:layout_constraintRight_toLeftOf="@id/last_income_me"
        app:layout_constraintTop_toBottomOf="@id/current_income_gran" />

    <TextView
        android:id="@+id/last_income_me"
        style="@style/TextInActivityIncome"
        android:text="@string/non_payment"
        app:layout_constraintLeft_toRightOf="@id/last_income_gran"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_income_me" />

</android.support.constraint.ConstraintLayout>