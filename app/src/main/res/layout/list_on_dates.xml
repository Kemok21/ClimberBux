<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00.0000"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/text_color_app"/>

    <TextView
        android:id="@+id/count_of_climbers_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:padding="16dp"
        app:layout_constraintRight_toLeftOf="@id/climbers_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/text_color_app"/>

    <TextView
        android:id="@+id/climbers_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/climbers"
        android:paddingVertical="16dp"
        app:layout_constraintLeft_toRightOf="@id/date_text_view"
        app:layout_constraintRight_toLeftOf="@id/income_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/text_color_app"/>

    <TextView
        android:id="@+id/income_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income:"
        android:paddingVertical="16dp"
        app:layout_constraintRight_toLeftOf="@id/sum_of_income_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/text_color_app"
        />

    <TextView
        android:id="@+id/sum_of_income_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:padding="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/text_color_app"/>

    <LinearLayout
        android:id="@+id/details_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_text_view"
        android:orientation="vertical">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>